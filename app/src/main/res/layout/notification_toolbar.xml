<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/blue_light"
    android:layout_height="wrap_content">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_light"
        android:elevation="0dp"
        app:elevation="0dp"
        android:layout_toStartOf="@id/imageBadgeView"
        android:theme="@style/Theme.AppCompat.Light">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_scrollFlags="scroll|enterAlways"
            app:title="Toolbar Title" />
    </com.google.android.material.appbar.AppBarLayout>

    <ru.nikartm.support.ImageBadgeView
        android:id="@+id/imageBadgeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_notification"
        app:ibv_badgeColor="#C10000"
        android:layout_centerVertical="true"
        app:ibv_badgeLimitValue="true"
        app:ibv_badgeTextColor="#ffffff"
        app:ibv_badgeTextSize="@dimen/_8ssp"
        app:ibv_badgeTextStyle="bold"
        app:ibv_fixedBadgeRadius="10dp"
        app:ibv_maxBadgeValue="200" />
</RelativeLayout>
