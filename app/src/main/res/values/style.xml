<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--    Todo Textview for item-->
    <style name="titleText">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">#252832</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="contentText">
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColor">@color/info</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="unitText">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
    </style>

<!--    Todo Line for view -->
    <style name="viewStyle">
        <item name="android:background">@color/warning</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>

    </style>


    <style name="AppTheme" parent="Widget.Material3.SearchBar">
        <item name="colorOnSurfaceVariant">@color/blue_light</item>
    </style>


    <style name="MyMaterialCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_marginHorizontal">@dimen/_21sdp</item>
        <item name="android:background">@color/white</item>
        <item name="android:backgroundTint">@color/blue_light</item>
    </style>


    <style name="inputMaterialCardView">
        <item name="android:layout_marginHorizontal">@dimen/_21sdp</item>
        <item name="backgroundTint">@color/blue_light</item>
        <!--        android:layoutDirection="rtl"
                            android:textColorHint="@color/grey"-->
    </style>

    <style name="editTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:layoutDirection">rtl</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="background">@color/white</item>
        <item name="backgroundTint">@color/white</item>
    </style>



    <style name="ToolbarTitle" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/info</item>

    </style>

    <style name="ToolBarStyle" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="android:itemBackground">#fff</item>
        <item name="android:textColor">#000</item>
    </style>
</resources>